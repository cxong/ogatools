#!/usr/bin/env bash

cp /usr/share/inkscape/icons/icons.svg i1.svg
sed -e s/0000ff/ff7400/g -e s/6464ff/ff8f63/g -e s/6464ff/ff8564/g -e s/000000/ffffff/g -e s/99b6d4/e99044/g -e s/98b6d3/db9b27/g -e s/8ab3de/dec28a/g -e s/99b7d5/d5c299/g -e s/99b7d6/e8da36/g -e s/b0c5da/fbb044/g -e s/99b7d4/d4ab99/g -e s/a4b8d2/d2b5a4/g -e s/e2e8f0/f0e7e2/g -e s/008000/f55ae3/g i1.svg > i2.svg
sudo cp i2.svg /usr/share/inkscape/icons/icons.svg
