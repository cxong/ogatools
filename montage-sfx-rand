#!/bin/sh

command -v sox >/dev/null 2>&1 || { echo >&2 "This command requires sox but it's not installed. Aborting."; exit 1; }
if (( $# <= 1 ))
then
  echo "Usage: montage-sfx [-r range] file [file ...]"
  exit 1
fi

SAVEIFS=$IFS
IFS=$(echo -en "\n\b")

RANDLIST=`shuf -e $*`

DATE="$(date +%Y%m%d@%H%M%S)"
NAME="./montage-sfx-${DATE}.wav"

echo Creating temporary files
for i in $*
do
  # .5 - 2 s rand
  RANDTIME=$[$RANDOM % 2].$[$RANDOM % 10]
  sox "$i" -c 2 -r 44100 /tmp/"$i-tmpX.wav" pad 0 $RANDTIME norm
done

echo Merging to single preview file
sox `for i in $RANDLIST; do echo /tmp/"$i-tmpX.wav"; done` $NAME
echo Created $NAME file

echo Deleting temporary files
for i in $*
do
  rm /tmp/"$i-tmpX.wav"
done

IFS=$SAVEIFS

